<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard | TaskFlow</title>

  <!-- Materialize -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

  <!-- Dashboard Theme CSS -->
  <link rel="stylesheet" href="/css/dark-dashboard.css">
</head>

<body class="dark-bg">

  <!-- NAVBAR -->
  <nav class="nav-wrapper gradient-bg">
    <div class="container">
      <a href="/" class="brand-logo">TaskFlow</a>
      <ul class="right">
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <main class="container dashboard-container">

    <!-- Left Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-inner">
        <div class="user-pill">
          <div class="avatar">TF</div>
          <div class="meta">
            <div class="name">Tanya Jha</div>
            <div class="handle">@jhatanya211</div>
          </div>
        </div>

        <ul class="menu">
          <li class="active">My Tasks</li>
          <li>Projects</li>
          <li>Calendar</li>
          <li>Analytics</li>
          <li>Settings</li>
        </ul>

        <div class="sidebar-footer">
          <small>TaskFlow • © 2025</small>
        </div>
      </div>
    </aside>

    <!-- Center: Calendar area -->
    <section class="center-panel">
      <div class="panel-top">
        <h5 class="white-text">My Taskboard</h5>
        <div class="actions">
          <a class="btn-flat white-text" id="viewToggle">Calendar View</a>
          <a class="btn-floating btn-small gradient-bg modal-trigger" href="#addTaskModal"><i class="material-icons">add</i></a>
        </div>
      </div>

      <div class="calendar">
        <!-- weekday header -->
        <div class="calendar-row calendar-header">
          <div>Mon</div><div>Tue</div><div>Wed</div><div>Thu</div><div>Fri</div><div>Sat</div><div>Sun</div>
        </div>

        <!-- grid (6 rows x 7 cols) -->
        <div id="calendarGrid" class="calendar-grid"></div>
      </div>
    </section>

    <!-- Right: Recent tasks + progress -->
    <aside class="right-panel">
      <div class="card small-card">
        <div class="card-content">
          <span class="card-title">Recent Tasks</span>
          <ul id="recentList" class="recent-list"></ul>
        </div>
      </div>

      <div class="card small-card">
        <div class="card-content">
          <span class="card-title">Daily Progress</span>
          <div class="progress-wrap">
            <div id="progressChart" class="progress-chart">—</div>
            <div id="progressText" class="progress-text">0 / 0</div>
          </div>
        </div>
      </div>

      <div class="card small-card">
        <div class="card-content">
          <span class="card-title">Quick Filters</span>
          <div class="chip" id="filterAll">All</div>
          <div class="chip" id="filterPending">Pending</div>
          <div class="chip" id="filterProgress">In Progress</div>
          <div class="chip" id="filterDone">Done</div>
        </div>
      </div>
    </aside>

  </main>

  <!-- Add Task Modal -->
  <div id="addTaskModal" class="modal dark-card">
    <div class="modal-content">
      <h5>Create Task</h5>
      <div class="input-field">
        <input id="taskTitle" type="text"><label for="taskTitle">Title</label>
      </div>
      <div class="input-field">
        <textarea id="taskDesc" class="materialize-textarea"></textarea><label for="taskDesc">Description</label>
      </div>
      <div class="input-field">
        <select id="taskStatus">
          <option value="Pending" selected>Pending</option>
          <option value="In Progress">In Progress</option>
          <option value="Done">Done</option>
        </select>
        <label>Status</label>
      </div>

      <div class="right">
        <button id="createTaskBtn" class="btn gradient-bg">Create</button>
      </div>
    </div>
  </div>

  <!-- Materialize + icons -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/js/tasks-api.js"></script>
  <script src="/js/dashboard.js"></script>
</body>
</html>
