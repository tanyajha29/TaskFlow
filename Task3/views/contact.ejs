<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="dark-bg">
<%- include("partials/nav") %>

<div class="container py-5">
    <div class="contact-card glass-card">
        <h3 class="text-center">Contact Us</h3>

        <% if (typeof message !== "undefined") { %>
            <div class="alert alert-success mt-3"><%= message %></div>
        <% } %>

        <form action="/contact-submit" method="POST" class="mt-3">
            <input type="text" name="name" placeholder="Your name" class="form-control mb-3" required>
            <input type="email" name="email" placeholder="Your email" class="form-control mb-3" required>
            <textarea name="msg" placeholder="Your message" class="form-control mb-3" required></textarea>
            <button class="btn btn-primary w-100 glow-btn">Send</button>
        </form>
    </div>
</div>

</body>
</html>
